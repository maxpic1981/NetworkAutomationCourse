{% for node,inv in nodes|dictsort %}
{%   if inventory_hostname == node %}
{%     for int,def in inv.interfaces|dictsort %}
interface {{int}}
{% 	  if def.ipv6 is defined %}
 ipv6 address {{def.ipv6}}/64
{%    else %}
 ip address {{def.ipv4}} 255.255.255.252
{%   endif %}
 no shutdown
{%     endfor %}
{%   endif %}
{% endfor %}
